@model IEnumerable<ColaProject.Models.Maintenance>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container flex-column justify-content-center align-items-center pt-2">
    <section class="content">
        <h2>Maintenance</h2>

        <p>
            <a href="/Maintenances/Create" class="btn btn-success">
                <i class="fa fa-plus"></i> Add New
            </a>
        </p>

        <div class="card">
            <!-- /.card-header -->
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>

                            <th>Maintenance Number</th>
                            <th>Kiosk Code</th>
                            <th>Status</th>


                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@Html.DisplayFor(modelItem => item.MaintenanceProcessId)</td>
                                <td>@Html.DisplayFor(modelItem => item.KioskCode)</td>
                                <td>@Html.DisplayFor(modelItem => item.MaintenanceStatus)</td>


                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@item.MaintenanceProcessId" class="btn btn-warning" title="Edit">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
        <script type="text/javascript">
            $(function () {
                $("#example1").DataTable({
                    "responsive": true,
                    "lengthChange": false,
                    "autoWidth": false,
                    "paging": true,
                    "buttons": ["copy", "csv", "excel", "pdf", "print"]
                }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
            });

        </script>
    }
    

